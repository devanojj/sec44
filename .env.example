# Core runtime
EM_ENV=development
DATABASE_URL=postgresql+psycopg://endpoint:endpoint@localhost:5432/endpoint
REDIS_URL=redis://localhost:6379/0
EM_SERVER_HOST=127.0.0.1
EM_SERVER_PORT=8000
EM_DEV_ENABLE_DOCS=false
EM_ENFORCE_HTTPS=false
EM_REPLAY_WINDOW_SECONDS=300
EM_MAX_INGEST_COMPUTE_SECONDS=3
EM_MAX_PAYLOAD_BYTES=524288

# JWT + CSRF secrets
EM_JWT_ACCESS_SECRET=replace-with-random-access-secret
EM_JWT_REFRESH_SECRET=replace-with-random-refresh-secret
EM_CSRF_SECRET=replace-with-random-csrf-secret
EM_JWT_ISSUER=endpoint-monitor
EM_JWT_AUDIENCE=endpoint-monitor-users
EM_ACCESS_TOKEN_TTL_SECONDS=900
EM_REFRESH_TOKEN_TTL_SECONDS=259200

# Org/API-key provisioning and dashboard users
EM_ORGS_JSON={"dev-org":{"name":"Development Org","api_key":"replace-api-key","rate_limit_per_minute":120}}
EM_USERS_JSON=[{"org_id":"dev-org","username":"admin","password":"ChangeMeNow!123","role":"admin"}]

# Observability
EM_LOG_FORMAT=json
EM_METRICS_TOKEN=replace-metrics-token

# Agent secret override
EM_AGENT_API_KEY=replace-api-key
